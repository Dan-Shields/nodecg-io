{
    "compilerOptions": {
        // Output related
        "target": "es2019",
        "importHelpers": true,
        "sourceMap": true,
        "declaration": true,

        // Module resolution
        "moduleResolution": "node",

        // Type checking
        "lib": ["es2019"],
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,

        "module": "CommonJS"
    },
    "compileOnSave": true
}
